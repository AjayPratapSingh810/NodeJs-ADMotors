<html lang="pt-br" data-bs-theme="dark">

<head>
    <title>AD Motors</title>
    <!-- LINKS BOOTSTRAP -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- ICONES -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
</head>

<body>


    <!-- nav bar -->
    <nav class="navbar navbar-expand-lg  bg-body-tertiary p-4">
        <div class="container">


            <!-- Logo -->
            <a class="navbar-brand text-success" href="#"><strong>AD Motors</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENU -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/login">Log in</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Register Form -->
    <section class="main-body">
        <form class="registerForm" action="/register" method="post">
            <a class="navbar-brand text-success" href="#"><strong>AD Motors</strong></a>

            <% if (typeof error !=='undefined' ) { %>
                <h5 style="color: rgb(246, 63, 63);">
                    User Already Exist
                </h5>
                <% } %>
                    <div class="mb-3">
                        <label for="username" class="form-label">Enter your username</label>
                        <input type="text" name="username" class="form-control" id="username"></input>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Enter your email address</label>
                        <input type="email" name="email" class="form-control" id="email">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Enter your password</label>
                        <input type="password" name="password" class="form-control" id="password">
                    </div>
                    <input type="submit" class="btn btn-outline-success mt-2 register-btn" style="font-size: 1rem;">
                    <div class="login-register-link">
                        <a href="login" style="text-decoration: none; color: #198754;">Already Register? Log in</a>
                    </div>
        </form>
    </section>
    <!-- REDES SOCIAIS -->
    <section class=" mt-5 mt-5 pt-8 pb-4">
        <div class="container">
            <div class="row">
                <div class="offset-lg-2 col-lg-8 col-md-12 col-12">
                    <div class="text-center px-lg-18 mb-8">
                        <p class="text-sucess"> AD Motors <i class="bi bi-globe"></i></strong></p>
                        <p class="mb-0">
                            Thanks For Your Visit </p>
                        <div class="mt-4">
                            <a href="0" class="text-inherit text-success me-3" target="_blank" title="WhatsApp"><i
                                    class="bi bi-whatsapp"></i></a>
                            <a href="0" class="text-inherit text-success me-3" target="_blank" title="Instagram"><i
                                    class="bi bi-instagram"></i></a>
                            <a href="0" class="text-inherit text-success me-3" target="_blank" title="Facebook"><i
                                    class="bi bi-facebook"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>

    <script src="/javascripts/home.js"></script>

    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>